{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["**/src", "**/tests"],
  "esm": true
}
