{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["./src/**/*.ts"],
  "esm": true
}
